{
    "name" : "Green Garments",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Green"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": ["tabs"],
    "icons": {
        "16": "logo-small.png",
        "48": "logo-small.png",
        "128": "logo-small.png"
    }
}